// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  workbench     Json      @default("{}")

  accounts Account[]
  agents   Agent[]
}

enum Role {
  USER
  ADMIN
}

model Engine {
  id                      String   @id
  type                    String // chat | completion | image ?
  model                   String // should link same model from different hosts
  provider                Provider @relation(fields: [providerId], references: [id])
  providerId              String
  // info
  displayName             String
  creatorName             String
  releaseDate             DateTime @default("1999-09-09T00:00:00+00:00")
  description             String
  url                     String
  license                 String
  licenseUrl              String
  // specs
  contextLength           Int
  parameterSize           String // 7 | 13 | 70 etc billion
  promptFormat            String
  stopTokens              String[] @default([])
  // host
  hostMaxCompletionTokens Int // host imposed maximum, same as contextLength if no limit
  priceInput              String // USD per 1k tokens
  priceOutput             String // can be Infinity/E notation etc.

  includeParameters Json     @default("{}") // {model: 'gpt-4', stream: true} etc
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  available         Boolean  @default(true) // eg. taken down

  Agent Agent[]
}

model Provider {
  id          String   @id // openai | openrouter | togetherai
  displayName String
  url         String
  engines     Engine[]
}

model Agent {
  id        String   @id @default(cuid())
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String @default("Untitled")

  engine     Engine @relation(fields: [engineId], references: [id])
  engineId   String
  parameters Json   @default("{}")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
